@model List<KeyRent.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Lista użytkowników</h1>

<a class="btn btn-success mb-3" href="@Url.Action("Create", "Admin")">
    <i class="fas fa-user-plus"></i> Dodaj nowego użytkownika
</a>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
