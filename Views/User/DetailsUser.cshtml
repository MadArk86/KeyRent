@model KeyRent.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>@ViewData["Title"]</h2>

<dl class="dl-horizontal">
    <dt>First Name</dt>
    <dd>@Model.FirstName</dd>
    <dt>Last Name</dt>
    <dd>@Model.LastName</dd>
    <dt>Email</dt>
    <dd>@Model.Email</dd>
    <dt>Phone Number</dt>
    <dd>@Model.PhoneNumber</dd>
</dl>

<a class="btn btn-warning" href="@Url.Action("EditUser", "User", new { id = Model.Id })">Edit</a>
<a class="btn btn-danger" href="@Url.Action("DeleteUser", "User", new { id = Model.Id })">Delete</a>
<a class="btn btn-secondary" href="@Url.Action("IndexUsers", "User")">Back to List</a>
