<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Key Rent</title>
    <link rel="stylesheet" href="~/lib/sb-admin-2/vendor/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/sb-admin-2/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/sb-admin-2/css/sb-admin-2.min.css" />

  
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <header>
                    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow mb-4 static-top">
                        <div class="container-fluid">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Key Rent</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="IndexLockers">Lockers</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="IndexRentals">Rentals</a></li>
                                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="IndexUsers">Users</a></li>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                    }
                                    else
                                    {
                                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                                        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                                    }

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Panel administratora</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                </header>

                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

            </div>
            <!-- End of Main Content -->

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        &copy; 2025 - Key Rent - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </footer>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


    <script src="~/lib/sb-admin-2/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/sb-admin-2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sb-admin-2/js/sb-admin-2.min.js"></script>

    <!-- Walidacja (jeśli nadal używasz) -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
