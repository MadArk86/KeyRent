@model KeyRent.Models.Locker

@{
    ViewData["Title"] = "Delete Locker";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete this locker?</p>

<dl class="dl-horizontal">
    <dt>Location</dt>
    <dd>@Model.Location</dd>
    <dt>Available</dt>
    <dd>@(Model.IsAvailable ? "Yes" : "No")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("IndexLockers", "Rent")">Cancel</a>
</form>
