@model KeyRent.Models.Locker

@{
    ViewData["Title"] = "Edit Locker";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable"></label>
        <select asp-for="IsAvailable" class="form-control">
            <option value="true" selected="@(Model.IsAvailable ? "selected" : null)">Yes</option>
            <option value="false" selected="@(!Model.IsAvailable ? "selected" : null)">No</option>

        </select>
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a class="btn btn-secondary" href="@Url.Action("IndexLockers", "Rent")">Back to List</a>
